# GitHub Search MCP - Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# REQUIRED CONFIGURATION
# ==========================================

# GitHub Personal Access Token (Required)
# Get yours at: https://github.com/settings/tokens
# Required scopes: repo (for private) or public_repo (for public only)
GITHUB_TOKEN=your_github_personal_access_token_here

# Server Port (Optional, default: 3000)
PORT=3000

# ==========================================
# AI SERVICE CONFIGURATION (Optional)
# ==========================================

# AI Service Provider (Optional, default: mock)
# Options: openai, anthropic, gemini, mock
AI_SERVICE=mock

# OpenAI Configuration (Optional)
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview  # Optional, default: gpt-3.5-turbo

# Anthropic Claude Configuration (Optional)
# Get your API key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229  # Optional, default: claude-3-sonnet

# Google Gemini Configuration (Optional)
# Get your API key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-pro  # Optional, default: gemini-pro

# ==========================================
# ADVANCED CONFIGURATION (Optional)
# ==========================================

# Node Environment (Optional)
NODE_ENV=development  # Options: development, production

# Logging Level (Optional)
LOG_LEVEL=info  # Options: debug, info, warn, error

# Search Configuration (Optional)
MAX_CONCURRENT_SEARCHES=10  # Maximum parallel branch searches
SEARCH_TIMEOUT=30000  # Search timeout in milliseconds

# Cache Configuration (Optional)
ENABLE_CACHE=true  # Enable/disable caching
CACHE_TTL=3600  # Cache time-to-live in seconds

# CORS Configuration (Optional)
ENABLE_CORS=true  # Enable/disable CORS
CORS_ORIGIN=*  # Allowed origins (* for all)

# GitHub API Configuration (Optional)
GITHUB_API_BASE=https://api.github.com  # GitHub API base URL
GITHUB_ENTERPRISE_URL=  # For GitHub Enterprise (leave empty for GitHub.com)

# Rate Limiting (Optional)
RATE_LIMIT_REQUESTS=100  # Requests per window
RATE_LIMIT_WINDOW=900000  # Window in milliseconds (15 minutes)

# File Analysis Limits (Optional)
MAX_FILE_SIZE=1048576  # Maximum file size for analysis (1MB)
MAX_TREE_DEPTH=3  # Maximum depth for file tree exploration

# ==========================================
# NOTES
# ==========================================
# 1. Only GITHUB_TOKEN is required for basic functionality
# 2. AI features work with mock data by default (no API key needed)
# 3. To enable real AI features, add the appropriate API key and set AI_SERVICE
# 4. For production deployment, set NODE_ENV=production
# 5. Adjust rate limits based on your GitHub API tier 